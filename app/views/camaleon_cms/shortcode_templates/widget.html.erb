<%
   key = attributes.keys.first.to_s
   widget = @current_site.widgets.where("slug = ?", key).first
%>
<% if widget.present? %>
    <% if (r = widget.renderer).present? %>
        <%= render partial: r, locals: {attributes: attributes } %>
    <% else %>
        <%= raw widget[:description].translate %>
    <% end %>
<% end  %>
