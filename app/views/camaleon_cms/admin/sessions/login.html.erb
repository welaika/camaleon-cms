<script>var kk = "<%= cama_get_session_id %>";</script>
<%= javascript_include_tag "camaleon_cms/admin/login_manifest" %>
<div class="login-body">
    <h3 class="login-box-msg"><%= raw t('camaleon_cms.admin.login.welcome_login_html') %>  </h3>
    <%= render "layouts/camaleon_cms/admin/flash_messages" %>
    <%= form_for(@user, as: "user", :html => { method: "post", role: "form", id:"login_user", class: "form-horizontal"  }, :url => cama_admin_login_path ) do |f| %>
        <div class="form-group">
            <div class="col-md-12">
                <%= f.text_field :username, :class => "form-control", :placeholder => t("camaleon_cms.admin.login.username") %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <%= f.password_field :password, :class => "form-control", :placeholder => t("camaleon_cms.admin.login.password") %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <%= raw cama_captcha_tags_if_under_attack("login") %>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-6">
                <div class="checkbox">
                    <label><input name="remember_me" type="checkbox"> <%= t("camaleon_cms.admin.login.remember_me") %> </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-6">
                <button type="submit" class="btn btn-primary btn-block btn-flat"><%= t('camaleon_cms.admin.button.log_in') %></button>
            </div>
            <!-- /.col -->
        </div>
        <hr>

        <%= raw cama_content_before_draw %>
        <%= r = {html: "", f: f}; hooks_run("user_login_form", r); raw(r[:html]); %>

        <div class="row">
            <% if current_site.get_option('permit_create_account', false) %>
                <div class="col-xs-6"><%= t('camaleon_cms.admin.login.do_not_have_account_yet') %><br> <a href="<%= cama_admin_register_path %>"><%= t('camaleon_cms.admin.login.create_account') %></a></div>
            <% end %>
            <div class="col-xs-6">
                <a href="<%= cama_admin_forgot_path %>" class=""><%= t('camaleon_cms.admin.login.forgot_your_password_int') %></a>
            </div>
        </div>
    <% end %>
</div>